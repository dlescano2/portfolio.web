---
import Layout from "../layouts/Layout.astro";

import AboutMe from "../components/AboutMe.astro";
import Badge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import Projects from "../components/Projects.astro";

import BriefcaseIcon from "../components/icons/Briefcase.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import MailIcon from "../components/icons/Mail.astro";
import PresentationIcon from "../components/icons/Presentation.astro";
import ProfileIcon from "../components/icons/Profile.astro";
---

<Layout
	title="Portfolio de Diego Lescano - Diseñador Web y Analista en Marketing."
	description="Disponible para trabajar en tu próximo proyecto."
>
	<main class="px-4">
		<SectionContainer class="py-16 md:py-36">
			<img
				class="rounded-full size-24 mb-4 "
				src="/me.webp"
				alt="foto de Diego"
			/>
			<h1
				class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
			>
				Hola, soy Diego!
				<a
					href="https://www.linkedin.com/in/diegolescano/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center hover:scale-105 transition"
				>
					<Badge>Disponible</Badge>
				</a>
			</h1>
			
			<h2 class="text-lg lg:text-2xl text-wrap max-w-[700px]">
				+5 años de experiencia. <span class="text-teal-500 font-semibold"
					>Diseñador Web y Analista en Marketing.</span>
				De Montevideo, Uruguay. Me especializo en desarrollar eCommerce con
				WordPress y WooCommerce.
			</h2>

			<nav class="flex gap-4 mt-8 flex-wrap">
				<SocialPill href="https://www.linkedin.com/in/diegolescano/">
					<LinkedInIcon class="size-4 md:size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="mailto:dlescano2@gmail.com">
					<MailIcon class="size-4 md:size-6" />
					Contacto
				</SocialPill>
			</nav>
		</SectionContainer>
		
		<SectionContainer class="mt-10 mb-10" id="experiencia">
			<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3">
				<BriefcaseIcon class="size-6" />
				Experiencia Laboral</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer class="mt-20 mb-10" id="proyectos">
			<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3">
				<PresentationIcon class="size-6" />
				Proyectos</h2>
			<Projects />
		</SectionContainer>

		<SectionContainer class="mt-20 mb-10" id="sobre-mi">
			<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3">
				<ProfileIcon class="size-6" />
				Sobre mí</h2>
			<AboutMe />
		</SectionContainer>

	</main>
</Layout>
